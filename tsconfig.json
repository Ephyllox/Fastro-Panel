{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "lib": [ "ES2022" ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": false,
    "strict": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules"
  ]
}
